@page
@model Area42_Accommodation.Pages.BookingConfirmationModel
@{
    ViewData["Title"] = "Booking Confirmation";
}
<section class="section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">

                <div class="mb-5">
                    <i class="fa fa-check-circle text-success" style="font-size: 4rem;"></i>
                </div>

                <h1 class="heading mb-4">Boeking Bevestigd!</h1>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <p class="lead mb-4">
                    Bedankt voor uw boeking! U ontvangt binnenkort een bevestigingsmail met alle details.
                </p>

                <div class="mt-5">
                    <a asp-page="/Index" class="btn btn-primary text-white px-5 py-3 mr-3">Terug naar Home</a>
                    <a asp-page="/Contact" class="btn btn-outline-primary px-5 py-3">Contact Opnemen</a>
                </div>

            </div>
        </div>
    </div>
</section>
